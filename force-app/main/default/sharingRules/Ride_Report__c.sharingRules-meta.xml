<?xml version="1.0" encoding="UTF-8"?>
<SharingRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <sharingCriteriaRules>
        <fullName>Ride_Report_Sharing_rule_for_CHES_Record_Type</fullName>
        <accessLevel>Read</accessLevel>
        <description>This rule is to share all Ride reports of CHES Ride Report Record Type to Tony Mazzarella</description>
        <label>Ride Report Sharing rule for CHES Record Type</label>
        <sharedTo>
            <group>CHES_Ride_Report_Public_Group</group>
        </sharedTo>
        <criteriaItems>
            <field>RecordTypeId</field>
            <operation>equals</operation>
            <value>CHES Ride Report</value>
        </criteriaItems>
        <criteriaItems>
            <field>Status__c</field>
            <operation>equals</operation>
            <value>Submitted</value>
        </criteriaItems>
        <includeRecordsOwnedByAll>true</includeRecordsOwnedByAll>
    </sharingCriteriaRules>
    <sharingCriteriaRules>
        <fullName>Sharing_rule_for_SK_Ride_Report_Record_type</fullName>
        <accessLevel>Read</accessLevel>
        <description>This rule is to give read access for all Ride reports records of SK Ride Report Record Type</description>
        <label>Sharing rule for SK Ride Report Record type</label>
        <sharedTo>
            <group>SK_Ride_Report_Public_Group</group>
        </sharedTo>
        <criteriaItems>
            <field>RecordTypeId</field>
            <operation>equals</operation>
            <value>SK Ride Report</value>
        </criteriaItems>
        <criteriaItems>
            <field>Status__c</field>
            <operation>equals</operation>
            <value>Submitted</value>
        </criteriaItems>
        <includeRecordsOwnedByAll>true</includeRecordsOwnedByAll>
    </sharingCriteriaRules>
</SharingRules>
