<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>FIRSTNAME_AND_SALUTATION_REQUIRED</fullName>
    <active>true</active>
    <errorConditionFormula>OR( 
ISBLANK ( FirstName ) , 
ISBLANK(TEXT(Salutation)))</errorConditionFormula>
    <errorMessage>First Name and Salutation is required.</errorMessage>
</ValidationRule> 